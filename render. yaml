services:
  - type: web
    name: telegram-bot-szxa
    env: python
    buildCommand: pip install -r requirements.txt
    startCommand: python bot.py
    envVars:
      - key: TELEGRAM_TOKEN
        sync: false
      - key: RENDER_EXTERNAL_URL
        fromService:
          type: web
          name: telegram-bot-szxa
          property: url
    healthCheckPath: /health
    autoDeploy: true